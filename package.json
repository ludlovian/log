{
  "name": "logjs",
  "version": "0.0.1",
  "description": "Simple console based logging",
  "source": "src/index/js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/ .nyc_output/ coverage/ node_modules/.cache/",
    "format": "prettier-standard {src,test}/*.js",
    "lint": "standard {src,test}/*.js|snazzy",
    "test": "FORCE_COLOR=1 nyc ava",
    "coverage": "npm run test && nyc report --reporter=html && sirv coverage/ -H 0.0.0.0 -p 8000",
    "build": "rollup -c rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludlovian/logjs.git"
  },
  "author": "",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/ludlovian/logjs/issues"
  },
  "homepage": "https://github.com/ludlovian/logjs#readme",
  "devDependencies": {
    "ava": "^3.15.0",
    "esm": "^3.2.25",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "dependencies": {
    "kleur": "^4.1.4"
  }
}
